<?xml version="1.0"?>
<project name="JDBA Post-Build Operations">

  <property name="ver">2.0.0-SNAPSHOT</property>
  <property name="test-db">h2</property>


  <target name="unpack-fw">
    <mkdir dir="bin"/>
    <unzip src="dist/jdba-fw.zip" dest="bin" overwrite="true"/>
  </target>

  <target name="unpack-single">
    <mkdir dir="bin"/>
    <unzip src="dist/jdba-single-templates.zip" dest="bin" overwrite="false"/>
  </target>

  <target name="unpack-tests">
    <mkdir dir="bin"/>
    <unzip src="dist/jdba-tests.zip" dest="bin" overwrite="false"/>
  </target>

  <target name="unpack-tools">
    <mkdir dir="tools"/>
    <unzip src="dist/jdba-tools.zip" dest="tools" overwrite="false"/>
  </target>


  <target name='integration-test' depends="unpack-fw,unpack-tests"
          description="Run DB-integration tests">
    <mkdir dir="coverage"/>
    <java jar='bin/integration-tests.jar' fork='true' failonerror='true'>
      <syspropertyset>
        <propertyref prefix="test-db-"/>
      </syspropertyset>
      <jvmarg value="-javaagent:${basedir}/tools/jacoco/lib/jacocoagent.jar=destfile=coverage/jacoco-${test-db}.dat,includes=org.jetbrains.jdba.*,excludes=*Test"/>
      <jvmarg value='-ea'/>
      <jvmarg value='-Dtest-db=${test-db}'/>
    </java>
  </target>





  <target name="combine-jars" depends="unpack-fw,unpack-single"
          description="Combine Core and RDBMS-specific jars into single jars">
    <mkdir dir="temp/combined-jars"/>

    <antcall target="combine-jar">
      <param name="nr" value="1"/>
      <param name="infix" value=""/>
      <param name="suffix" value=""/>
    </antcall>
    <antcall target="combine-jar">
      <param name="nr" value="2"/>
      <param name="infix" value=""/>
      <param name="suffix" value="-sources"/>
    </antcall>
    <antcall target="combine-jar">
      <param name="nr" value="3"/>
      <param name="infix" value="test-db-"/>
      <param name="suffix" value=""/>
    </antcall>
    <antcall target="combine-jar">
      <param name="nr" value="4"/>
      <param name="infix" value="test-db-"/>
      <param name="suffix" value="-sources"/>
    </antcall>

    <zip basedir="temp/combined-jars" destfile="dist/jdba-single.zip" compress="false"/>
  </target>


  <target name="combine-jar">
    <delete dir="temp/content-${nr}"/>
    <mkdir dir="temp/content-${nr}"/>

    <unjar src="bin/jdba-single-${infix}${ver}${suffix}.jar" dest="temp/content-${nr}"/>

    <unjar dest="temp/content-${nr}" overwrite="false">
      <fileset dir="bin">
        <include name="jdba-*-${infix}${ver}${suffix}.jar"/>
        <exclude name="jdba-single*"/>
      </fileset>
      <patternset>
        <exclude name="META-INF/services/*"/>
      </patternset>
    </unjar>

    <jar basedir="temp/content-${nr}" destfile="temp/combined-jars/jdba-single-${infix}${ver}${suffix}.jar"/>
  </target>


  <target name="clean-temp"
          description="Cleans the temporary directory">
    <delete dir="temp"/>
  </target>


  <target name="clean" depends="clean-temp"
          description="Cleans unpacked jars and temporary files">
    <delete dir="bin"/>
    <delete dir="coverage"/>
  </target>


</project>